{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 400,
    "title": "CO2 Emissions per Country",
    "data": {
        "url": "https://raw.githubusercontent.com/awan0049-monash/FIT3179/main/data/sustainable_energy.csv"
        },
    "mark": "circle",

    "encoding": {
        "x": {
            "field": "gdp_per_capita",
            "type": "quantitative"
        },
        "y": {
            "field": "Primary energy consumption per capita (kWh/person)",
            "type": "quantitative",
            "title": "Energy Consumption per capita (KWh)"
        },
        "color": {
            "field": "Continent",
            "type": "nominal"
            },
        "size": {
            "field": "Value_co2_emissions_kt_by_country",
            "type": "quantitative"
        }
    }
}




